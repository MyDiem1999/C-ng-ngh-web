@{
    ViewBag.Title = "Chi tiết sản phẩm";
}
@using DoAn.Models
@model tbl_SanPham
<div class="container" style="font-size:xx-large; font-family:'Times New Roman'">
    <p class=" text-light" style="font-size:larger;margin:10px;font-weight:bolder">@Model.TenSP </p>
    <div>
        <div class="card-img" style="float:left;width:500px;height:500px;margin-left:20px">
            <img src="~/Content/hinhanh/@Model.Hinh" height="400" width="400" />

        </div >
        <div class="card-body text-light" style="font-size:xx-large">
            <p>
                <label style="font-weight:bold">Tên sản phẩm:</label> &nbsp;@Model.TenSP
                <br />
                <label style="font-weight:bold">Mã sản phẩm:</label> &nbsp;@Model.MaSanPham
                    <br />
                <label style="font-weight:bold">Mã loại:</label>&nbsp;@Model.MaL
                    <br />
                <label style="font-weight:bold">Màu sắc:</label>&nbsp; @Model.MauSac
                    <br />
                <label style="font-weight:bold">Giá bán:</label>&nbsp;@Model.Gia VNĐ
            </p>
            <a href="@Url.Action("ThemGH","GioHang", new { Ma = @Model.MaSanPham}) " class="btn btn-danger" style="width:200px;font-size:x-large">Mua</a>
        </div>
    </div>
</div>
@*;opacity:0.7*@
